<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.aungpyaephyo.padc.restaurants">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".RestaurantsApp"
        android:allowBackup="true"
        android:icon="@mipmap/padc_restaurant_icon_two_192"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/padc_restaurant_icon_two_192"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.RestaurantListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".persistence.RestaurantsProvider"
            android:authorities="xyz.aungpyaephyo.padc.restaurants"
            android:exported="false"
            android:syncable="true" />

        <activity
            android:name=".activities.RestaurantDetailsActivity"
            android:label="@string/title_activity_restaurant_details"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>