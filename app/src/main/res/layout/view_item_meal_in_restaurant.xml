<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_meal_in_restaurant"
        android:layout_width="@dimen/width_meal_in_restaurant"
        android:layout_height="@dimen/height_meal_in_restaurant"
        android:src="@drawable/placeholder_phandeeyar" />

    <TextView
        android:id="@+id/tv_meal_title"
        android:layout_width="@dimen/width_meal_in_restaurant"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Meal in Restaurant"
        android:textSize="@dimen/text_regular"
        android:textStyle="bold" />

</LinearLayout>